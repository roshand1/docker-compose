{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "roshand1/multi-reactapp",
            "hostname":"client",
            "essential":false,
            "memory":128
        },
        {
            "name": "node-auth-service",
            "image": "roshand1/multi-node-auth-service",
            "hostname":"api",
            "essential":false,
            "memory":128
        },
        {
            "name": "nginx",
            "image": "roshand1/multi-nginx",
            "hostname":"nginx",
            "essential":true,
            "memory":128,
            "portMappings":[
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links":["client","node-auth-service"]
        }
    ]
}